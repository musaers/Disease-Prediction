
@model RiskAnalysisViewModel

<h2>Heart Disease Risk Prediction</h2>

<form asp-action="SubmitHeartDiseasePrediction" method="post">
    <div class="form-group">
        <label for="age">Age:</label>
        <select id="age" name="age" class="form-control">
            <option value="18-24">18-24</option>
            <option value="25-29">25-29</option>
            <option value="30-34">30-34</option>
            <option value ="35-39">35-39</option>
            <option value= "40-44">40-44</option>
            <option value= "45-49">45-49</option>
            <option value= "50-54">50-54</option>
            <option value= "55-59">55-59</option>
            <option value= "60-64">60-64</option>
            <option value= "65-69">65-69</option>
            <option value= "70-74">70-74</option>
            <option value= "75-79">75-79</option>
            <option value= "80 or older">80+</option>

                    <!-- Add other age ranges as needed -->
        </select>
    </div>

    <div class="form-group">
        <label for="height">Height (in centimeters):</label>
        <input type="integer" id="height" name="Height" class="form-control" />
    </div>

    <div class="form-group">
        <label for="weight">Weight (in kilograms):</label>
        <input type="integer" id="weight" name="Weight" class="form-control" />
    </div>

    <div class="form-group">
        <label for="diabeticstatus">Diabetic Status:</label>
        <select id="diabeticstatus" name="DiabeticStatus" class="form-control">
            <option value="1">Diabetic</option>
            <option value="0">Healthy</option>
        </select>
    </div>

    <div class="form-group">
        <label for="gender">Gender:</label>
        <select id="gender" name="Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>

    <div class="form-group">
        <label for="race">Race:</label>
            <select id="race" name="race" class="form-control">
                <option value="Asian">Asian</option>
                <option value="Hispanic">Hispanic</option>
                <option value="Black">Black</option>
                <option value="White">White</option>
                <option value="American Indian/Alaskan Native">American Indian/Alaskan Native</option>

                        
            </select>
    </div>

    <div class="form-group">
        <label for="sleeptime">Sleep Time (hours):</label>
        <input type="integer" id="sleeptime" name="SleepTime" class="form-control" />
    </div>

    <div class="form-group">
        <label for="smokingstatus">Smoking Status:</label>
        <select id="smokingstatus" name="SmokingStatus" class="form-control">
            <option value="true">Smoker</option>
            <option value="false">Non-Smoker</option>
        </select>
    </div>

    <div class="form-group">
        <label for="bloodsugar">Blood Sugar (mg/dL):</label>
        <input type="double" id="bloodsugar" name="BloodSugar" class="form-control" />
    </div>

    <div class="form-group">
        <label for="marriagestatus">Marital Status:</label>
        <select id="marriagestatus" name="MarriageStatus" class="form-control">
            <option value="true">Married</option>
            <option value="false">Not Married</option>
        </select>
    </div>

    <div class="form-group">
        <label for="hypertension">Hypertension:</label>
        <select id="hypertension" name="Hypertension" class="form-control">
            <option value="true">Hypertension</option>
            <option value="false">Healthy</option>
        </select>
    </div>

    <div class="form-group">
        <label for="workplace">Workplace:</label>
        <input type="text" id="workplace" name="Workplace" class="form-control" />
    </div>
    <a href="/Home/HeartDiseaseResult" class="button">Submit</a>
    
</form>

