@{
    ViewData["Title"] = "Analysis";
}

<h2>@ViewData["Title"]</h2>

<div style="width: 43%; margin: auto;">
    <canvas id="myChart"></canvas>
</div>

<!-- Analysis Summary -->
@if (ViewData["AnalysisSummary"] != null)
{
    <div class="analysis-summary" style="width: 43%; margin: 20px auto; text-align: center;">
        <p>@ViewData["AnalysisSummary"]</p>
    </div>
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var chartData = @Html.Raw(ViewData["ChartData"]);
    var myChart = new Chart(ctx, {
        type: 'polarArea', // Grafiğin türünü buradan ayarlayın
        data: chartData,
        options: {
            scales: {
                
            }
        }
    });
</script>

<style>
    .analysis-summary {
        font-style: italic;
        color: #8b0202;
    }
</style>
